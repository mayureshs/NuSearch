@using NuSearch.Web.Models
@model SearchForm

@Html.Partial("RememberAuthor", Model)
@if (Model.PageSize != SearchForm.DefaultPageSize)
{
	<input name="@Html.NameFor(m=>m.PageSize).ToLowerInvariant()" type="hidden" value="@Model.PageSize"/>
}
@if (Model.Sort != SearchForm.DefaultSort)
{
	<input name="@Html.NameFor(m=>m.Sort).ToLowerInvariant()" type="hidden" value="@Enum.GetName(typeof(SearchSort),Model.Sort).ToLowerInvariant()"/>
}
